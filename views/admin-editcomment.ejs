    <div id="page-wrapper" class="img-back">
        <div class="header">
            <h1 class="page-header">
                Edit Comment
            </h1>

        </div>
        
        <div id="page-inner">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-default">
                            <div class="booking-form">
                                <form action="/admin/editComment/<%= comment.id %>?_method=PUT" method="POST">
                                   <input type="hidden" name="_method" value="PUT"/>
                                    <div class="row">
                                    <% include ./partials/messages %>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Report Ref. No</span>
                                                <input class="form-control" name="reportID" type="text"
                                                    placeholder="Enter Report ref No" value="<%= comment.reportID %>" required>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Subject</span>
                                                <input class="form-control" name="subject" type="text"
                                                    placeholder="Enter Subject" value="<%= comment.subject %>" required>
                                            </div>

                                        </div>
                                    </div>
                                    
                                    <h3>Description: </h3>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <textarea class="textarea-input" name="description"
                                                    placeholder="Enter Description" rows="4" value="<%= comment.description %>" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-btn">
                                                <button type="submit" name="submit" class="submit-btn">Submit
                                                    report</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
